<div class="container">
    <h1>First Round</h1>
    <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add Team</a>
           <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Team Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="contactList">
                <!-- Repeatable Rows -->
                <% for(let count = 0; tournament.FirstRound.length < 1; count++) { %> 
                    <tr>
                        <th scope="row" class="text-center"><%= count + 1 %> </th>
                        <td><%= tournament.FirstRound[0]  %> </td>
                        <td class="text-center"><a href="/edit/<%= tournament._id %> " class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                        <td class="text-center"><a href="/delete/<%= tournament._id %> " class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                    </tr>
                <% } %>     
            </tbody>
           </table>
        </div>
    </div>
</div>