<div class="container">
    <h1><%=tournament.Name></h1>
    <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add Team</a>
           <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Team 1</th>
                    <th scope="col"></th>
                    <th scope="col">Team 2</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="contactList">
                <!-- Repeatable Rows -->
                <% let index = 1; %>
                <% for(let count = 0; count < 4; count += 2) { %> 
                    
                    <tr>
                        <th scope="row" class="text-center"> <%= index %> <%index += 1; %></th>
                        <td><%= tournament.Participants.Team1  %> </td>
                        <td>vs</td>
                        <td><%= tournament.Participants.Team2 %> </td>
                        <td class="text-center"><a href="/edit/<%= tournament._id %> " class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                        <td class="text-center"><a href="/delete/<%= tournament._id %> " class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                    </tr>
                <% } %>     
            </tbody>
           </table>
        </div>
    </div>
</div>