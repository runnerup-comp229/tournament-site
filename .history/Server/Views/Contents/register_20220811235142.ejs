<div class="row">
  <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="login" id="contentArea">

          <% if (user) { %>
            <h1 class="display-4">Update Profile</h1>
            <% } else { %>
            <h1 class="display-4">Register</h1>
            <% }  %>

          <!-- Message Area -->
          <% if(messages.length > 0) { %>
            <% if (user) { %>
              <div id="messageArea" class="alert alert-success">
              <% } else { %>
                <div id="messageArea" class="alert alert-danger">
              <% }  %>
              <%= messages %>
            </div>
            <% } %>

            <% if(err != '') { %>
              <% for (let count = 0; count < err.length; count++) { %>
                  <div class="alert alert-warning">
                      <%= err[count].msg %>
                    </div>
              <% } %>
          <% } %>

            <form method="POST" id="registerForm" novalidate>

              <% if (user) { %>
                
                <% } else { %>
                  <p class="hint-text">Create your own account. It's free and only takes a minute.</p>
                <% }  %>
              

              <div class="form-group">
                <div class="row">
                  <p class="lead"><i class="fas fa-user-shield"></i> Personal Information</p>
                  <div class="col-md-6">
                    <input class="form-control" type="text" value="<%= (user == '') ? user : user.FirstName %>" name="firstName" id="firstName" placeholder="First Name" required>
                  </div>
                  <div class="col-md-6">
                    <input class="form-control" type="text" value="<%= (user == '') ? user : user.LastName %>" name="lastName" id="lastName" placeholder="Last Name" required>
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <input type="email" class="form-control" id="emailAddress" name="emailAddress" required
                    value="<%= (user == '') ? user : user.EmailAddress %>" placeholder="Email">
                  </div>
                </div>
              </div>

              <div class="form-group mt-4">
                <div class="row">
                  <p class="lead"><i class="fas fa-database"></i> System Identification</p>
                  <div class="col-md-12">
                    <input type="text" class="form-control" id="username" name="username"  required
                    value="<%= (user == '') ? user : user.username %>" placeholder="Username">
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <input type="password" class="form-control" id="password" name="password"  required
                    value="" placeholder="<%= (user == '') ? "Password" : "Old Password" %>">
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                    value="" placeholder="<%= (user == '') ? "Confirm Password" : "New Password" %>">
                  </div>
                </div>
              </div>
                                                  
              <div class="text-end mt-2">
                
                <button id="submitButton" type="submit" class="btn btn-primary btn-lg">
                  <i class="fas fa-user-plus"></i> Register</button>
                <button id="cancelButton" type="reset" class="btn btn-warning btn-lg">
                  <i class="fas fa-undo"></i> Cancel</button>
              </div>
            </form>
           
        </div>
        <p class="text-center text-muted small">
          Already have an account? 
          <a class="link" href="/login">Sign in</a>
        </p>
  </div>
</div>