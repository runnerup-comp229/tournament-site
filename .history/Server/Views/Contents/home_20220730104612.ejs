<div class="container pb-5">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to RunnerUP tournament site!</h1> 
         <h1 class="display-5">List of Tournaments</h1>
      </div>
      <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add Tournament</a>
            <a href="/<%= userId %>/mytournaments" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-list"></i> My Tournaments</a>
           <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Tournament Name</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Status</th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody id="contactList">
                <!-- Repeatable Rows -->
                <% for(let count = 0; count < tournament.length; count++) { %> 
                    
                    <tr>
                        <th scope="row" class="text-center"> <%= count +1 %></th>
                        <td><%= tournament[count].Name %> </td>
                        <td ><%= tournament[count].Owner.DisplayName %> </td>
                        <% if(tournament[count].isActive){ %>
                            <td>Active</td>
                          <% } else{ %>  
                            <td>Inactive</td>
                         <% } %>  

                         <td class="text-center"><a href="/view/<%= tournament[count]._id %>" class="btn btn-info btn-sm edit"><i class="fa-solid fa-eye"></i> View</a></td>
                         
                    </tr>
                <% } %>     
            </tbody>
           </table>
        </div>
    </div>
</div>
