<div class="container">
    <h1><%=tournament.Name%> First-Round</h1>
    <div class="row">
        <div class="col">
           <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Team 1</th>
                    <th scope="col"></th>
                    <th scope="col">Team 2</th>
                </tr>
            </thead>
            <tbody id="contactList">
                <!-- Repeatable Rows -->
                <% let index = 1; %>
                <% for(let count = 0; count < 8; count += 2) { %> 
                    
                    <tr>
                        <th scope="row" class="text-center"> <%= index %> <%index += 1; %></th>
                        <td><%= tournament.Participants[count]%> </td>
                        <td class="text-center">vs</td>
                        <td><%= tournament.Participants[count + 1]%> </td>
                    </tr>
                <% } %>     
            </tbody>
           </table>
           <button type="button" class="btn btn-primary mb-1" disabled>First-Round</button>
            <a href="/<%= tournament._id %>/semifinal" id="addButton" class="btn btn-primary mb-1">Semi-Final</a>
            <a href="/<%= tournament._id %>/runnerup" id="addButton" class="btn btn-primary mb-1">Runner up</a>
            <a href="/<%= tournament._id %>/final" id="addButton" class="btn btn-primary mb-1">Final</a>
           <a href="/<%= tournament._id %>/winners" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-trophy"></i> Winners</a>
        </div>
        <div class="bout">
            <a href='#' class="btn btn-danger team teamT" role="button"> <h3>Team 1</h3> <br> <%= tournament.Participants[0] %></a>
            <br>
            <button type="button" class="btn btn-danger team teamB"> <h3>Team 2</h3> <br> <%= tournament.Participants[1] %></button>
        </div>
        <div class="bout">
            <button type="button" class="btn btn-danger team teamT"> <h3>Team 3</h3> <br> <%= tournament.Participants[2] %></button>
            <br>
            <button type="button" class="btn btn-danger team teamB"> <h3>Team 4</h3> <br> <%= tournament.Participants[3] %></button>
        </div>
        <div class="bout">
            <button type="button" class="btn btn-danger team teamT"> <h3>Team 5</h3> <br> <%= tournament.Participants[4] %></button>
            <br>
            <button type="button" class="btn btn-danger team teamB"> <h3>Team 6</h3> <br> <%= tournament.Participants[5] %></button>
        </div>
        <div class="bout">
            <button type="button" class="btn btn-danger team teamT"> <h3>Team 7</h3> <br> <%= tournament.Participants[6] %></button>
            <br>
            <button type="button" class="btn btn-danger team teamB"> <h3>Team 8</h3> <br> <%= tournament.Participants[7] %></button>
        </div>
    </div>
</div>