<div class="container">
    <h1><%=tournament.Name%> Runner-up</h1>
    <% if (tournament.RunnerUp[0] == "" && tournament.RunnerUp[1] == "" ) { %>
        <p class="h4">
            Teams have not been assigned yet.
          </p>
          <% } else { %>
    <div class="row">
        <div class="col">
           <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Team 1</th>
                    <th scope="col"></th>
                    <th scope="col">Team 2</th>
                </tr>
            </thead>
            <tbody id="contactList">
                <!-- Repeatable Rows -->
                <% let index = 1; %>
                <% for(let count = 0; count < 2; count += 2) { %> 
                    
                    <tr>
                        <th scope="row" class="text-center"> <%= index %> <%index += 1; %></th>
                        <td><%= tournament.RunnerUp[count]%> </td>
                        <td class="text-center">vs</td>
                        <td><%= tournament.RunnerUp[count + 1]%> </td>
                    </tr>
                <% } %>     
            </tbody>
           </table>
           <% } %>   
           <a href="/<%= tournament._id %>/firstround" id="addButton" class="btn btn-primary mb-1">First-round</a>
           <a href="/<%= tournament._id %>/semifinal" id="addButton" class="btn btn-primary mb-1">Semi-Final</a>
           <button type="button" class="btn btn-primary mb-1" disabled>Runner-up</button>
            <a href="/<%= tournament._id %>/final" id="addButton" class="btn btn-primary mb-1">Final</a>
            <a href="/<%= tournament._id %>/winners" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-trophy"></i> Winners</a>
        </div>
    </div>
    <div class="bout">
        <a href='/<%= tournament._id %>/RunnerUp/<%= tournament.RunnerUp[0] %>/<%= tournament.RunnerUp[1] %>' class="btn btn-danger team teamT" role="button"> <h3>Team 1</h3> <br> <%= tournament.RunnerUp[0] %></a>
        <br>
        <a href="/<%= tournament._id %>/RunnerUp/<%= tournament.RunnerUp[1] %>/<%= tournament.RunnerUp[0] %>" class="btn btn-danger team teamB"> <h3>Team 2</h3> <br> <%= tournament.RunnerUp[1] %></a>
        <br>
        <a href="#" class="btn btn-warning team teamB"> <h3>Winner</h3> <br> <%= tournament.Third %></a>
</div>