<div class="container">
    <h1 class="col-lg-6 col-md-10 col-sm-10"><% if(title == "Edit") { %> Edit <%= tournament.Name %> <% } else { %> Add Tournament <% } %> </h1>
    <hr>
    <div id="messageArea"></div>

    <div class="row justify-content-lg-center g-3">
      <form method="POST" class="col-lg-6 col-md-10 col-sm-10">

        <div class="input-group mb-3">
          <span class="input-group-text">Team Name: </span>
          <input id="name" name="name" type="text" class="form-control" 
          value="<%= tournament.Name %>"
          aria-label="Tournament Name" aria-describedby="Tournament Name Input" required>
        </div>   
        
        
        <button id="submitButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Submit</button>        
        <a href="/home" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
        
        
      
      </form>
      <p>
    </p>
    <p>
    </p>
    </div>
</div>