<div class="container">
    
    <h1><%=tournament.Name%> Winners <i class="fa-solid fa-trophy"></i></h1>
    <% if (tournament.First == "" && tournament.Second == "" && tournament.Third == "" && tournament.Fourth == "") { %>
        <p class="h4">
            Teams have not been assigned yet.
          </p>
          <% } else { %>
            
    <div class="row">
        <div class="col">
           <table class="table table-striped table-bordered table-hover w-75"  >
            <thead class="table-dark">
                <tr>
                    <th scope="col" >#</th>
                    <th >Team Name</th>
                </tr>
            </thead>
            <tbody id="winnerList">
                    
                    <tr>
                        <th scope="row" class="align-middle"> <img src="/Assets/Images/Gold.png" class="medal">First</th>
                        <td class="align-middle"><h4><%= tournament.First%></h4> </td>
                    </tr>
                    <tr>
                        <th scope="row" class="align-middle"> <img src="/Assets/Images/Silver.png" class="medal">Second</th>
                        <td class="align-middle"><h4><%= tournament.Second%> </h4></td>
                    </tr>
                    <tr>
                        <th scope="row" class="align-middle"> <img src="/Assets/Images/Bronze.png" class="medal">Third</th>
                        <td class="align-middle"><h4><%= tournament.Third%></h4> </td>
                    </tr>
                    <tr>
                        <th scope="row" class="align-middle"> Fourth</th>
                        <td class="align-middle"><%= tournament.Fourth%> </td>
                    </tr>
                  
            </tbody>
           </table>
           <% } %>   
           
           <a href="/<%= tournament._id %>/firstround" id="addButton" class="btn btn-danger mb-1">First-round</a>
            <a href="/<%= tournament._id %>/semifinal" id="addButton" class="btn btn-danger mb-1">Semi-Final</a>
            <a href="/<%= tournament._id %>/runnerup" id="addButton" class="btn btn-danger mb-1">Runner up</a>
            <a href="/<%= tournament._id %>/final" id="addButton" class="btn btn-danger mb-1">Final</a>
            <a href="/home" id="addButton" class="btn btn-info mb-1"><i class="fa-solid fa-house-chimney"></i></a>

        
</div>
</div>
</div>