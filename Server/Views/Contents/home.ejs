<div class="container pb-5">
    <div class="jumbotron">
        <h1>Welcome to RunnerUP!</h1>
        <img id="logo-large" src="/Assets/Images/index.png">
        <h2 >List of Tournaments</h2>
      </div>
      <div class="buttContain">
        <a href="/add" id="addButton" class="btn btn-warning mb-1"><i class="fa-solid fa-circle-plus"></i> Add Tournament</a>
        <a href="/mytournaments/<%= userId %>" id="addButton" class="btn btn-info mb-1"><i class="fa-solid fa-list"></i> My Tournaments</a>
    </div>
      <div class="row">
        <div class="col">
            
           <table class="table table-bordered table-hover w-75">
            <thead class="table-dark">
                <tr class="rounded">
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Tournament Name</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Status</th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody id="contactList">
                <!-- Repeatable Rows -->
                <% for(let count = 0; count < tournament.length; count++) { %> 
                    
                    <tr class="rounded">
                        <th scope="row" class="text-center"> <%= count +1 %></th>
                        <td><%= tournament[count].Name %> </td>
                        <td ><%= tournament[count].Owner.DisplayName %> </td>
                        <% if(tournament[count].FIRST != ""){ %>
                            <td>Active</td>
                          <% } else{ %>  
                            <td>Inactive</td>
                         <% } %>  

                         <td class="text-center"><a href="/view/<%= tournament[count]._id %>" class="btn btn-info btn-sm edit"><i class="fa-solid fa-eye"></i> View</a></td>
                         
                    </tr>
                <% } %>     
            </tbody>
           </table>
        </div>
    </div>
</div>
